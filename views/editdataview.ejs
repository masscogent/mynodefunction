<%- include('head.ejs',{pagetitle:title}) -%>

<div class="container mt-5">
    <a href="/mydata/" type="button" class="btn btn-primary btn-sm"> Back</a>
    <h3>Edit Data From Database</h3>
    <form action="/mydata/edit_database_data" method="post" enctype="multipart/form-data" class="mt-3">
        <input type="text" name="userid" value="<%= user.id %>">
        <div class="mb-3">
            <label for="" class="form-label">Image</label>
            <input type="file" 
              class="form-control" name="profile_image" id="" aria-describedby="helpId" placeholder="">
           
          </div>
        <div class="mb-3">
          <label for="" class="form-label">Name</label>
          <input type="text" value="<%= user.name %>" 
            class="form-control" name="name" id="" aria-describedby="helpId" placeholder="" required>
         
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Address</label>
            <input type="text" value="<%= user.address %>" 
              class="form-control" name="address" id="" aria-describedby="helpId" placeholder="" required>
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Phone</label>
            <input
              type="number" value="<%= user.phone %>" 
              class="form-control"
              name="phone"
              id=""
              aria-describedby="helpId"
              placeholder=""
              required
            />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>

